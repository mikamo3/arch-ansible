<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
  <!-- Font configuration generated by Ansible -->
  <alias>
    <family>serif</family>
    <prefer>
{% for font in gui_fonts.serif %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
  
  <alias>
    <family>sans-serif</family>
    <prefer>
{% for font in gui_fonts.sans_serif %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
  
  <alias>
    <family>monospace</family>
    <prefer>
{% for font in gui_fonts.monospace %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
{% if gui_fonts.cursive is defined %}
  
  <alias>
    <family>cursive</family>
    <prefer>
{% for font in gui_fonts.cursive %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
{% endif %}
{% if gui_fonts.fantasy is defined %}
  
  <alias>
    <family>fantasy</family>
    <prefer>
{% for font in gui_fonts.fantasy %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
{% endif %}
</fontconfig>