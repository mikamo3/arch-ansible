<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
  <!-- Font configuration generated by Ansible -->
  <alias>
    <family>serif</family>
    <prefer>
{% for font in desktop.font_families[desktop.fonts.install].serif %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
  
  <alias>
    <family>sans-serif</family>
    <prefer>
{% for font in desktop.font_families[desktop.fonts.install].sans_serif %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
  
  <alias>
    <family>monospace</family>
    <prefer>
{% for font in desktop.font_families[desktop.fonts.install].monospace %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
{% if desktop.font_families[desktop.fonts.install].cursive is defined %}
  
  <alias>
    <family>cursive</family>
    <prefer>
{% for font in desktop.font_families[desktop.fonts.install].cursive %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
{% endif %}
{% if desktop.font_families[desktop.fonts.install].fantasy is defined %}
  
  <alias>
    <family>fantasy</family>
    <prefer>
{% for font in desktop.font_families[desktop.fonts.install].fantasy %}
      <family>{{ font }}</family>
{% endfor %}
    </prefer>
  </alias>
{% endif %}
</fontconfig>